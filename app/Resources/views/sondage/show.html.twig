{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sondage</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sondage.id }}</td>
            </tr>
            <tr>
                <th>Intitule</th>
                <td>{{ sondage.intitule }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{% if sondage.dateCreation %}{{ sondage.dateCreation|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Istermine</th>
                <td>{% if sondage.isTermine %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if sondage.dateFin %}{{ sondage.dateFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sondage_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('sondage_edit', { 'id': sondage.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
