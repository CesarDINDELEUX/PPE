{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sondages list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Intitule</th>
                <th>Datecreation</th>
                <th>Istermine</th>
                <th>Datefin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sondage in sondages %}
            <tr>
                <td><a href="{{ path('sondage_show', { 'id': sondage.id }) }}">{{ sondage.id }}</a></td>
                <td>{{ sondage.intitule }}</td>
                <td>{% if sondage.dateCreation %}{{ sondage.dateCreation|date('Y-m-d') }}{% endif %}</td>
                <td>{% if sondage.isTermine %}Yes{% else %}No{% endif %}</td>
                <td>{% if sondage.dateFin %}{{ sondage.dateFin|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('sondage_show', { 'id': sondage.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('sondage_edit', { 'id': sondage.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sondage_new') }}">Create a new sondage</a>
        </li>
    </ul>
{% endblock %}
