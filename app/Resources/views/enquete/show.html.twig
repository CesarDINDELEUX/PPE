{% extends 'base.html.twig' %}

{% block body %}
    <h1>Enquete</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ enquete.id }}</td>
            </tr>
            <tr>
                <th>Intitule</th>
                <td>{{ enquete.intitule }}</td>
            </tr>
            <tr>
                <th>Istermine</th>
                <td>{% if enquete.isTermine %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{% if enquete.dateCreation %}{{ enquete.dateCreation|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if enquete.dateFin %}{{ enquete.dateFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('enquete_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('enquete_edit', { 'id': enquete.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
